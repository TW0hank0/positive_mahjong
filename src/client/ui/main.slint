import { Button, ScrollView } from "std-widgets.slint";

export component MainWindow inherits Window {
    //width: 1080px;
    //height: 720px;
    title: "Slint Rust Demo";
    min-width: 540px;
    min-height: 360px;
    max-width: 10800px;
    max-height: 72000px;
    //background: darkgray;
    default-font-size: 30px;
    VerticalLayout {
        spacing: 20px;
        padding: 20px;
        Text {
            text: "PMJ Client";
            font-size: 35px;
            horizontal-alignment: TextHorizontalAlignment.left;
            //color: lightgray;
        }

        TextInput {
            //placeholder-text: "輸入資料...";
            text <=> root.server_ip;
            single-line: true;
            //color: lightgray;
        }

        Button {
            text: "測試連線";
            clicked => {
                root.test_connection();
            }
        }

        ScrollView {
            Text {
                text: root.server_response_text;
                horizontal-alignment: TextHorizontalAlignment.left;
                //color: white;
                wrap: TextWrap.word-wrap;
            }

            vertical-scrollbar-policy: ScrollBarPolicy.always-on;
            horizontal-scrollbar-policy: ScrollBarPolicy.as-needed;
        }
    }

    // 屬性與回調定義
    in-out property <string> server_response_text: "";
    in-out property <string> server_ip: "請輸入伺服器Ip";
    callback test_connection();
}
